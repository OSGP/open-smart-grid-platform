      <groupId>org.opensmartgridplatform</groupId>
      <artifactId>osgp-protocol-simulator-iec60870</artifactId>
      <classifier>classes</classifier>
    </dependency>
    
    <dependency>
      <groupId>org.opensmartgridplatform</groupId>
      <artifactId>cucumber-tests-platform</artifactId>
