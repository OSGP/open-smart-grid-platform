pipeline {
    agent {
      kubernetes {
        inheritFrom 'gxf-jenkins-agent'
      }
    }

    options {
        ansiColor('xterm')
        timestamps()
        timeout(240)
        // Only keep the 10 most recent builds
        buildDiscarder(logRotator(numToKeepStr:'10'))
    }

    stages {
        stage('Echo') {
            steps {
                container('maven') {
                    echo 'Hello Universe from pipeline script!'
                }
            }
        }
    }
}
